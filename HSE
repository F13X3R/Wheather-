import requests  # Импорт библиотеки requests для выполнения HTTP-запросов

def get_weather(city_name):
    # Формирование URL-адреса для запроса погоды в указанном городе
    # Параметр `format=%C+%t+%w+%h` задает формат вывода:
    # %C - текущая погода (например, "Ясно"), %t - температура, %w - ветер, %h - влажность
    url = f"https://wttr.in/{city_name}?format=%C+%t+%w+%h"

    try:
        # Выполнение GET-запроса к сервису wttr.in
        response = requests.get(url)

        # Проверка статуса ответа
        if response.status_code == 200:  # Если запрос успешен (статус 200)
            # Вывод информации о погоде в указанном городе
            print(f"Погода в городе {city_name}: {response.text}")
        else:
            # Если запрос не удался (статус не 200), выводим сообщение об ошибке
            print("Ошибка при получении данных о погоде.")

    except requests.exceptions.RequestException as e:
        # Обработка исключений, которые могут возникнуть при выполнении запроса
        print(f"Ошибка запроса: {e}")

# Запрос у пользователя названия города
city_name = input("Введите название города: ")

# Вызов функции get_weather для получения и вывода информации о погоде
get_weather(city_name)
